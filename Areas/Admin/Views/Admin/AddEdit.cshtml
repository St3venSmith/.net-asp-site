@model Activitys
@{
    // Retrieve the last edited activity name from cookies
    var lastEditedActivity = Context.Request.Cookies["LastEditedActivity"];

    // Retrieve the total number of activities from sessions
    var totalActivities = Context.Session.GetInt32("TotalActivities");
}

@if (!string.IsNullOrEmpty(lastEditedActivity))
{
    <div class="alert alert-info">
        Last Edited Activity: @lastEditedActivity
    </div>
}

@if (totalActivities.HasValue)
{
    <div class="alert alert-info">
        Total Activities: @totalActivities
    </div>
}

<form asp-action="AddEdit" method="post">
    <div>
        <label asp-for="activityName"></label>
        <input asp-for="activityName" class="form-control" />
        <span asp-validation-for="activityName" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="activityDescription"></label>
        <input asp-for="activityDescription" class="form-control" />
        <span asp-validation-for="activityDescription" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="activityLocation"></label>
        <input asp-for="activityLocation" class="form-control" />
        <span asp-validation-for="activityLocation" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="activityType"></label>
        <input asp-for="activityType" class="form-control" />
        <span asp-validation-for="activityType" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="fireteamSize"></label>
        <input asp-for="fireteamSize" class="form-control" />
        <span asp-validation-for="fireteamSize" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="difficulty"></label>
        <input asp-for="difficulty" class="form-control" />
        <span asp-validation-for="difficulty" class="text-danger"></span>
    </div>
    <div>
        <div>
            <label asp-for="isMatchMade"></label>
            <input asp-for="isMatchMade" class="form-check-input" type="checkbox" />
            <span asp-validation-for="isMatchMade" class="text-danger"></span>
        </div>
    </div>
    <input type="hidden" asp-for="activityID" />
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-controller="Admin" asp-action="Index" class="btn btn-primary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}